#include <stdio.h>

int main()
{    
    float sales =4000;
    float discount;
    if (sales>5000)
       {
           discount=sales*10/100;
           printf("the sales of %f Rs. will get 10 percent Discount of Rs. %f",sales,discount);
       }
    else if (sales>3000)
       {
           discount=sales*10/100;
           printf("the sales of %f Rs. will get 5 percent Discount of Rs. %f",sales,discount);
       }
    else
       {
           printf("no discount given");
       }
    printf("\n\n%f\n%f",sales,discount);
    return 0;
}
