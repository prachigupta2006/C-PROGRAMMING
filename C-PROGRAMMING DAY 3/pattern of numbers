#include <stdio.h>

int main() {
    int num = 1; // Start number
    int rows = 5; // Number of rows in the pattern
    
    // Outer loop for rows
    for (int i = 1; i <= rows; i++) {
        // Inner loop for columns
        for (int j = 1; j <= i; j++) {
            printf("%d ", num);
            num++; // Increment number for each element
        }
        printf("\n"); // Move to the next line after each row
    }

    return 0;
}
