#include <stdio.h>

int main() {
    int limit;
    
    printf("Enter the limit: ");
    scanf("%d", &limit);
    
    printf("Even numbers from 0 to %d are:\n", limit);
    for (int i = 0; i <= limit; i++) {
        if (i % 2 == 0) { 
            printf("%d ", i);
        }
    }
    printf("\n");
    
    return 0;
}